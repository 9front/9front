#!/bin/rc

if(~ $#pkgpath 0)
	pkgpath=http://pkg.violetti.org/$cputype

cd /
mkdir -p /sys/lib/pkg
if (test -s /sys/lib/pkg/$1) {
	echo $i already installed
	exit
}
echo Installing $1
if(~ $pkgpath ftp* http*)
	cmd=hget
if not
	cmd=cat
if(! $cmd $pkgpath/$1.tbz | bunzip2 | pkg/unpkg >/sys/lib/pkg/$1)
	if(! test -s /sys/lib/pkg/$1)
		rm -f /sys/lib/pkg/$1
