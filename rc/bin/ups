#!/bin/rc
# ups - look up a UPS tracking number
rfork en

if(! ~ $#* 1) {
	echo usage: ups 1ZA41W190338680961 >[1=2]
	exit usage
}

hget 'http://wwwapps.ups.com/WebTracking/processInputRequest?tracknum='^$1^ \
	'&TypeOfInquiryNumber=T' |
	htmlfmt |
	awk '/^Share/,/^Subscribe/ {print;}' |
	grep -v '^(Share|Change Delivery|Request Status Updates|Never track again|Continue|I am already a UPS My Choice Member|â€¢ What|Subscribe to UPS)' |
	ssam 's/\n\n\n/\n/g'
