#!/bin/rc

# desc: choose system type

switch($1){
case checkdone
	if(~ $#syst 1 && ~ $syst cpu terminal)
		systype=done
	if not
		systype=ready
	export systype
	if(~ $syst terminal)
		tasks=`{echo $tasks | sed 's/authsetup//g'}
	export tasks
case go
	echo

	options=(terminal cpu)
	
	prompt -d terminal 'System type' $options
	syst=$rd
	export syst
}
