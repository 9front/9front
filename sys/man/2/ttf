..
.PB
#include <u.h>
#include <libc.h>
#include <bio.h>
#include <ttf.h>
.PB
struct TTBitmap {
	u8int *bit;
	int width, height, stride;
};
.PB
struct TTGlyph {
	TTBitmap;
	int xminpx, xmaxpx, yminpx, ymaxpx, advanceWidthpx;
	/* + internals */
};
.PB
struct TTFont {
	int ppem, ascentpx, descentpx;
	/* + internals */
};
.PB
.ta +\w'\fLTTBitmap* \fP'u
