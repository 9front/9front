#!/bin/rc

# desc: choose the type of file system to install

switch($1){
case checkdone
	if(! ~ $fstype cwfs){
		configfs=ready
		export configfs
	}

case go
	echo 'You can install the following types of file systems:'
	echo
	echo '	cwfs	the cached-worm file server'
	echo
	prompt -d fossil 'File system' cwfs
	fstype=$rd
	export fstype
}


