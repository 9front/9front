#!/bin/rc

if(! test -e '#σ/usb/usbevent')
	exit
if(! bind -a '#u' /dev)
	exit
@{
	rfork ne
	fn attach {
		switch($4){
		case *01
			nusb/audio $1
		case *02
			# serial and ethernet
			nusb/serial $1
			# handled /sys/src/9/boot/nusbrc
			# nusb/ether $1
		case *03
			# handled /sys/src/9/boot/nusbrc
			# nusb/kb $1
		case *08
			# handled /sys/src/9/boot/nusbrc
			# nusb/disk $1
		case *10106
			nusb/ptp $1
		}
	}
	fn detach {
		# handled /sys/src/9/boot/nusbrc
	}
	rc < '#σ/usb/usbevent' &
}

bind -qa '#σ/usb' /dev
bind -qa '#σ/usbnet' /net
